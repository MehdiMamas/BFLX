{
  "manifest_version": 3,
  "name": "BFLX",
  "version": "1.1.3",
  "description": "Autofill your goverment documents with BFLX",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "./js/bg.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BFLX",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pay.gov/*/form/*"
      ],
      "js": [
        "./js/helper.js",
        "./js/csPayGov.js"
      ]
    },
    {
      "matches": [
        "*://bluefieldlaw.pipedrive.com/*"
      ],
      "js": [
        "./js/helper.js",
        "./js/csBFL.js"
      ]
    }
  ]
}